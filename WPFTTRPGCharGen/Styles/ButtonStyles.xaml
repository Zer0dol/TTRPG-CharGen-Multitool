            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Source" Value="..\img\World of Darkness\World_Of_Darkness_Logo_hover.png"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>